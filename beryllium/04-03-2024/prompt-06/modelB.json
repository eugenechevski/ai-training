{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "text": {
        "type": "string",
        "description": "The encrypted clue text"
      },
      "key": {
        "type": "integer",
        "description": "The shift value for the Caesar Cipher encryption"
      },
      "nextClueId": {
        "type": "integer",
        "description": "The ID of the next clue in the hunt"
      }
    },
    "required": ["text", "key", "nextClueId"]
  }
}
